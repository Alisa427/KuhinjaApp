<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/pinkyDark"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="164dp"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/imageLogo"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:paddingRight="100dp"
                android:paddingBottom="10dp"
                android:src="@drawable/logo" />

            <Space
                android:layout_width="1600dp"
                android:layout_height="match_parent"
                android:layout_weight="1" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:paddingRight="1dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">

                    <Space
                        android:layout_width="100dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1" />

                    <TextView
                        android:id="@+id/txtCook"
                        android:layout_width="wrap_content"
                        android:layout_height="110dp"
                        android:paddingTop="27dp"
                        android:text="Kuhar: "
                        android:textSize="24sp" />

                    <TextView
                        android:id="@+id/txtNameSurname"
                        android:layout_width="wrap_content"
                        android:layout_height="110dp"
                        android:paddingLeft="10dp"
                        android:paddingTop="27dp"
                        android:paddingRight="10dp"
                        android:text="Niko Nikić"
                        android:textSize="24sp"
                        android:textStyle="bold" />

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <ImageButton
                                android:id="@+id/imgBtnAccount"
                                android:layout_width="100dp"
                                android:layout_height="75dp"
                                android:backgroundTint="#00FFFFFF"
                                android:scaleType="fitCenter"
                                android:src="@drawable/person_icon"
                                tools:src="@drawable/person_icon" />

                        </LinearLayout>

                        <Space
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1" />

                    </LinearLayout>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">

                    <RelativeLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1">

                        <Button
                            android:id="@+id/btnOrders"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:background="@drawable/btns_accepted_ordered_styles"
                            android:paddingLeft="20dp"
                            android:text="Narudžbe"
                            android:textAlignment="textStart"
                            android:textColor="@color/black"
                            android:textSize="20dp"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/txtNumberOfOrderCards"
                            android:layout_width="50dp"
                            android:layout_height="match_parent"
                            android:layout_alignParentTop="true"
                            android:layout_alignParentBottom="true"
                            android:layout_marginLeft="170dp"
                            android:layout_marginTop="5dp"
                            android:layout_marginBottom="5dp"
                            android:background="@drawable/small_numbers_style_burgundy"
                            android:cursorVisible="false"
                            android:paddingLeft="18dp"
                            android:paddingTop="5dp"
                            android:text="5"
                            android:textColor="@color/white"
                            android:textSize="20dp"
                            android:textStyle="bold"
                            android:translationZ="10dp" />

                    </RelativeLayout>

                    <RelativeLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1">

                        <Button
                            android:id="@+id/btnAccept"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:background="@drawable/btns_accepted_ordered_styles"
                            android:paddingLeft="20dp"
                            android:text="Prihvaćeno"
                            android:textAlignment="textStart"
                            android:textColor="@color/black"
                            android:textSize="20dp"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/txtAcceptedCards"
                            android:layout_width="50dp"
                            android:layout_height="match_parent"
                            android:layout_alignParentTop="true"
                            android:layout_alignParentBottom="true"
                            android:layout_centerHorizontal="false"
                            android:layout_marginLeft="180dp"
                            android:layout_marginTop="5dp"
                            android:layout_marginBottom="5dp"
                            android:background="@drawable/small_number_style_green"
                            android:cursorVisible="false"
                            android:paddingLeft="18dp"
                            android:paddingTop="5dp"
                            android:text="0"
                            android:textColor="@color/white"
                            android:textSize="20dp"
                            android:textStyle="bold"
                            android:translationZ="10dp" />

                    </RelativeLayout>

                    <RelativeLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1">

                        <Button
                            android:id="@+id/btnReady"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:background="@drawable/btns_accepted_ordered_styles"
                            android:paddingLeft="20dp"
                            android:text="Dnevni rad"
                            android:textAlignment="textStart"
                            android:textColor="@color/black"
                            android:textSize="20dp"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/txtReadyCards"
                            android:layout_width="50dp"
                            android:layout_height="match_parent"
                            android:layout_alignParentTop="true"
                            android:layout_alignParentBottom="true"
                            android:layout_marginLeft="170dp"
                            android:layout_marginTop="5dp"
                            android:layout_marginBottom="5dp"
                            android:background="@drawable/small_number_style_gray"
                            android:cursorVisible="false"
                            android:paddingLeft="18dp"
                            android:paddingTop="5dp"
                            android:text="0"
                            android:textColor="@color/white"
                            android:textSize="20dp"
                            android:textStyle="bold"
                            android:translationZ="10dp" />
                    </RelativeLayout>
                </LinearLayout>
            </LinearLayout>

        </LinearLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">


            <ImageView
                android:id="@+id/imgCook"
                android:layout_width="match_parent"
                android:layout_height="672dp"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_alignParentEnd="true"
                android:layout_centerHorizontal="true"
                android:layout_marginStart="0dp"
                android:paddingTop="20dp"
                android:src="@drawable/cook"
                android:translationZ="10dp"
                android:visibility="invisible" />

            <TextView
                android:id="@+id/txtNoCards"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/imgCook"
                android:layout_centerHorizontal="true"
                android:background="@drawable/order_list_style"
                android:paddingLeft="40dp"
                android:paddingRight="40dp"
                android:text="Nema kartica u ovom odjeljku!"
                android:textSize="46sp"
                android:textStyle="bold"
                android:translationZ="10dp"
                android:visibility="invisible" />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/orderItemsRecyclerView"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginBottom="50dp"
                android:background="@drawable/recyclerview_style"
                android:fadeScrollbars="true"
                android:paddingLeft="55dp"
                android:paddingTop="55dp"
                android:paddingRight="55dp"
                android:paddingBottom="75dp"
                android:scrollbarSize="10dp"
                android:scrollbarStyle="outsideOverlay"
                android:scrollbars="horizontal"
                android:visibility="visible" />

            <Button
                android:id="@+id/buttonKonobar"
                android:layout_width="500dp"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@+id/orderItemsRecyclerView"
                android:layout_marginStart="1685dp"
                android:layout_marginTop="809dp"
                android:layout_marginEnd="45dp"
                android:layout_marginBottom="9dp"
                android:backgroundTint="#FB2727"
                android:text="📞    Pozovi konobara"
                android:translationZ="20dp" />
        </RelativeLayout>
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>